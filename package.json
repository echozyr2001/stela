{
  "name": "universal-compiler-framework",
  "version": "1.0.0",
  "description": "A universal compiler framework built with TypeScript and Bun runtime",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "compiler",
    "framework",
    "typescript",
    "bun",
    "lexer",
    "parser",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "fast-check": "^3.15.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}